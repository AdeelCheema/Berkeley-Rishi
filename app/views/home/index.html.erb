<script src="//maps.google.com/maps/api/js?key=#" + ENV['google_api_key']></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<div  class="navigationbar" style='width: 1700px;'>
  <ul  class="navbar">
    <li><%=link_to "GoFundMe!", "https://www.gofundme.com/", id: "Link to GoFundMe!"%></li>
    <li><%=link_to "Members", "/members"%></li>
    <li><%=link_to "About", "/about"%></li>            
  </ul>
</div>

<div class="wardsLst" style="width:200px;">
  <% @wards.each do |ward| %>
  <ul>
    <li class="has_cmt"><%=link_to ward.name, "#"%></li>
    <ul id="cmt">
      <li><%=link_to "Water"%></li>
      <li><%=link_to "Education"%></li>
    </ul>
  </ul>
  <% end %>
</div>

<div class="map_block">
  <div id="map" style='width: 1500px; height: 800px;'></div>
</div>

 
<script type="text/javascript">

var mapOptions = {
  center: new google.maps.LatLng(31.1048,77.1734),
  zoom: 7
};

handler = Gmaps.build('Google');
handler.buildMap({ provider: mapOptions, internal: {id: 'map'}}, function(){
  handler.addMarkers(<%=raw @marker_hash.to_json %>);
});
</script>
